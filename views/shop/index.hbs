<div class="col-sm-6 col-md-4 offset-md-4 offset-sm-6">
    <div id="success" class="alert alert-succes" {{#if noMessage }}d-none{{/if}}>
        {{successMsg}}
    </div>
</div>

<div class="container">
    {{# each products}}
        <div class="row">
            {{# each this}}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="{{this.imagePath}}" class="img-fluid">
                        <div class="caption">
                            <h3>{{this.title}}</h3>
                            <p class="description">{{this.description}}</p>
                            <p>
                            <p class="price float-left">${{this.price}}</p>
                            <a href="/add-to-cart/{{ this.id }}" class="btn btn-success float-right" role="button">
                                Add
                            </a>
                            </p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/each}}
</div>
